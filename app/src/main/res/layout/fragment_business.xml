<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="htc.cloud.intern.hungrytest.business.BusinessActivityFragment">

    <include
        android:id="@+id/content_bottom"
        layout="@layout/content_business_bottom"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"    />

    <include
        android:id="@+id/content_top"
        layout="@layout/content_business_top"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_above="@id/content_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"    />


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/business_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_primary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_scrollFlags="scroll|enterAlways" />

    </android.support.design.widget.AppBarLayout>

</FrameLayout>
